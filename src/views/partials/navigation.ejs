    <!-- Simula contenido largo para poder hacer scroll -->
    <h1>Bienvenido</h1>
    <p>Desliza hacia abajo para ver el efecto.</p>
    <div style="height: 2000px;"></div>
  </div>





<style>
    /* Navbar inicial (invisible / transparente) */
#navbar {
  position: fixed;
  top: 0;
  width: 100%;
  padding: 1rem;
  color: white;
  text-align: center;
  transition: background-color 0.3s ease;
  background-color: transparent;
  z-index: 1000;
}

/* Clase que se activa al hacer scroll */
.navbar-scroll {
  background-color: #333;
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
}

</style>


<script>
    // Cambiar el color de fondo de la barra de navegación al hacer scroll
    window.addEventListener('scroll', function() { // Escucha el evento de scroll
        const navbar = document.querySelector('#navbar'); // Selecciona la barra de navegación
         // Verifica si el scroll es mayor a 50px
        if (window.scrollY > 50) {
            navbar.classList.add('navbar-scroll'); // Añade la clase que cambia el color de fondo
        } else {
            navbar.classList.remove('navbar-scroll'); // Elimina la clase si el scroll es menor o igual a 50px
        }
    });

</script>